{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "session",
          "style": "plain",
          "foreground": "#505050",
          "template": "{{ .UserName }}@{{ .HostName }}"
        },
        {
          "type": "path",
          "style": "plain",
          "foreground": "#E0E0E0",
          "options": {
            "style": "full",
            "folder_separator_icon": "/"
          },
          "template": " {{ .Path }} "
        },
        {
          "type": "git",
          "style": "diamond",
          "foreground": "#888888",
          "background": "#222222",
          "leading_diamond": "\ue0b6",
          "trailing_diamond": "\ue0b4",
          "foreground_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}#111111{{ end }}"
          ],
          "background_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}#E0E0E0{{ end }}"
          ],
          "options": {
            "branch_icon": "",
            "fetch_status": true,
            "fetch_upstream_icon": true
          },
          "template": " {{ .HEAD }}{{ if gt .Behind 0 }} ↓{{ .Behind }}{{ end }}{{ if gt .Ahead 0 }} ↑{{ .Ahead }}{{ end }}{{ if .Staging.Changed }} +{{ add .Staging.Added .Staging.Modified .Staging.Deleted }}{{ end }}{{ if .Working.Changed }} ~{{ add .Working.Modified .Working.Deleted .Working.Untracked }}{{ end }} "
        },
        {
          "type": "text",
          "style": "plain",
          "foreground": "#666666",
          "foreground_templates": [
            "{{ if gt .Code 0 }}#ff453a{{ end }}"
          ],
          "template": "\n→ "
        }
      ]
    }
  ],
  "version": 2
}